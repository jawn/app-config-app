- content_for :title do
  #{form_name}

- content_for :head do
  %script{type: 'text/javascript', src: 'https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js'}

  :css
    #form {
      border: none;
      width: 100%;
      height: 100%;
      scroll: none;
    }

  :javascript
    $("#form").ready(function () {
      setTimeout(function () { $("#form").css("height", $("#form").contents().height() + "px"); }, 1000);
    });

%h2 #{form_name}

#{form}
